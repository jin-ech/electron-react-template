{
  "name": "electron-next-template",
  "version": "0.1.0",
  "private": true,
  "main": "./src/main/app.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "client": "next start",
    "lint": "next lint",
    "start": "concurrently --kill-others-on-fail \"npm run dev\" \"electron ./src/main/app\"",
    "build-32": "npm run build && electron-builder --win --ia32",
    "build-64": "npm run build && electron-builder --win --x64",
    "build-linux": "npm run build && electron-builder --linux",
    "build-mac": "npm run build && electron-builder --mac"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "next": "13.5.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "build": {
    "productName": "electron-next-template",
    "appId": "appIdxxxxx",
    "copyright": "Copyright Â© 2023 power by jinech",
    "asar": "true",
    "directories": {
      "buildResources": "static",
      "output": "release"
    },
    "extraResources": [
      {
        "from": "./public/static",
        "to": "static"
      }
    ],
    "files": [
      "!**/node_modules/**/*",
      "!**/release/**/*",
      ".next/**/*",
      "src/main/**/*"
    ],
    "win": {
      "icon": "./public/favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "dmg": {
      "icon": "./public/favicon.ico",
      "contents": [
        {
          "x": 0,
          "y": 0,
          "path": "/Application"
        }
      ]
    },
    "linux": {
      "icon": "./public/favicon.ico"
    },
    "mac": {
      "icon": "./public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "guid": "guidxxxx",
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "electron-next-template"
    }
  },
  "devDependencies": {
    "@ecomfe/eslint-config": "^8.0.0",
    "@types/react": "18.2.23",
    "@typescript-eslint/parser": "^6.7.3",
    "concurrently": "^8.2.1",
    "electron": "^26.2.2",
    "electron-builder": "^24.6.4",
    "electron-reloader": "^1.2.3",
    "less": "^4.2.0",
    "less-loader": "^11.1.3",
    "next-plugin-antd-less": "^1.8.0"
  }
}
